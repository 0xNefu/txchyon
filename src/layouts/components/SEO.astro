---
import config from "@/config/config.json";

const {
  title,
  description,
  image,
  canonical,
  noindex = false,
} = Astro.props;

// Simple, direct image URL - NO DOUBLE BASE_URL!
const finalTitle = title ?? "Txchyon";
const finalDescription = description ?? "on-chain research + Defi alpha and Airdrops";
const finalImage = "https://txchyon.com/images/tokens.jpg"; // HARDCODED to avoid issues
const finalCanonical = canonical ?? "https://txchyon.com" + Astro.url.pathname;
---

<!-- Simple, reliable social meta tags -->
{!noindex && <meta name="robots" content="index, follow" />}
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Primary Meta Tags -->
<title>{finalTitle}</title>
<meta name="title" content={finalTitle} />
<meta name="description" content={finalDescription} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={finalCanonical} />
<meta property="og:title" content={finalTitle} />
<meta property="og:description" content={finalDescription} />
<meta property="og:image" content={finalImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={finalTitle} />
<meta property="og:site_name" content="Txchyon" /> <!-- ADDED: Required for proper branding -->

<!-- Twitter - FIXED: Changed from "property" to "name" -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={finalCanonical} />
<meta name="twitter:title" content={finalTitle} />
<meta name="twitter:description" content={finalDescription} />
<meta name="twitter:image" content={finalImage} />
<meta name="twitter:site" content="@NefuTrades" /> <!-- ADDED: Your Twitter handle -->
<meta name="twitter:creator" content="@NefuTrades" /> <!-- ADDED: Creator tag -->

<!-- Canonical URL -->
<link rel="canonical" href={finalCanonical} />